---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const allDocs = await getCollection('docs');
const docs = allDocs.filter(doc => doc.slug !== 'intro'); // Filter out the 'intro' page
---

<Layout title="記事一覧">
  <main class="max-w-5xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-extrabold text-gray-900 mb-8 text-center">記事一覧</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {docs.length === 0 ? (
        <p class="text-center col-span-full text-gray-600">記事がありません。</p>
      ) : (
        docs.map((doc) => (
          <a href={`/mypage/docs/${doc.slug}`} class="block bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
            <h2 class="text-xl font-semibold text-indigo-600 mb-2">{doc.data.title || doc.slug}</h2>
            {doc.data.description && <p class="text-gray-600 text-sm">{doc.data.description}</p>}
          </a>
        ))
      )}
    </div>
  </main>
</Layout>